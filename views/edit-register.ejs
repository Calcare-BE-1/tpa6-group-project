<div class="container">
    <% if (typeof errors !='undefined') { %>
    <div class="alert alert-danger" role="alert">
      <ul>
        <% errors.forEach(e => { %>
        <li><%= e.msg %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>
  
    <form method="POST" action="/register?_method=PUT">
      <input type="hidden" name="_id" value="<%= register._id %>" />
      <div class="form-group">
        <label for="nama">Nama</label>
        <input
          type="text"
          class="form-control"
          id="nama"
          name="nama"
          value="<%= register.nama %>"
        />
      </div>
      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          value="<%= register.email %>"
        />
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        <input
          type="text"
          class="form-control"
          id="password"
          name="password"
          value="<%= register.password %>"
        />
      </div>
      <div class="form-group">
        <label for="tinggi_badan">Tinggi Badan</label>
        <input
          type="text"
          class="form-control"
          id="tinggi_badan"
          name="tinggi_badan"
          value="<%= register.tinggi_badan %>"
        />
        <div class="form-group">
            <label for="berat_badan">Berat Badan</label>
            <input
              type="text"
              class="form-control"
              id="berat_badan"
              name="berat_badan"
              value="<%= register.berat_badan %>"
            />
          </div>
          <div class="form-group">
            <label for="umur">Umur</label>
            <input
              type="text"
              class="form-control"
              id="umur"
              name="umur"
              value="<%= register.umur %>"
            />
          </div>
      </div>
  
      <button type="submit" class="btn btn-primary">Edit</button>
    </form>
  </div>
  